            @Html.DisplayNameFor(model => model.CardCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeckStyle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DeckId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DeckType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CardCount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DeckStyle)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id=item.DeckId }) |
        @Html.ActionLink("Details", "Details", new { id=item.DeckId }) |
